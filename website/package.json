{
	"name": "website",
	"type": "module",
	"private": true,
	"scripts": {
		"prebuild": "bun run build:wasm",
		"build": "nuxt build",
		"build:wasm": "wasm-pack build ../crates/cowsay-wasm --target web --out-dir ../../website/vendored/cowsay/",
		"predev": "cp ./vendored/cowsay/cowsay_wasm_bg.wasm ./node_modules/.cache/vite/client/deps/",
		"dev": "nuxt dev",
		"dev:wasm": "wasm-pack build ../crates/cowsay-wasm --dev --target web --out-dir ../../website/vendored/cowsay/",
		"predev:build": "npm run dev:wasm",
		"dev:build": "vite build",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --check app/",
		"format:fix": "prettier --write app/"
	},
	"dependencies": {
		"@heroicons/vue": "^2.2.0",
		"cowsay-wasm": "./vendored/cowsay",
		"nuxt": "^4.2.1",
		"tailwindcss": "^4.1.17",
		"vue": "^3.5.25",
		"vue-router": "^4.6.3"
	},
	"devDependencies": {
		"@nuxt/eslint": "1.11.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.17",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-vue": "^10.6.2",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"typescript-eslint": "^8.48.1"
	}
}
